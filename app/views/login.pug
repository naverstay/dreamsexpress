include mixins
doctype html
html(lang='ru')
    +dev_head("DREAMSEXPRESS login", false, false, false, false, false, true)

    body.mCSB
        .wrapper
            .base
                +header(1)
                
                div.main_content
                    .section_inner
                        - var bc = breadcrumbs ? breadcrumbs : [['Главная', 'login']];

                        +breadcrumbs(bc)
                        h1.page_title.fw_700
                            - if (email)
                                span E-mail подтвержден
                            - else
                                span Требуется авторизация
                            
                        .auth_block
                            +auth_forms('_lk', email || false)


            +footer()
            
        +aside_left(true)
        +aside_right()
        +popups(true)
        +scripts("DREAMSEXPRESS login", false, false, false, false, false, true)
        
