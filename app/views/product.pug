                        +breadcrumbs(bc)

                        - if (product)
                            .product_block
                                .product_photos
                                    h1.page_title.fw_700
                                        span= product.name || 'product.name'
                                        
                                .product_cart
                                    .product_soc
                                        
                            .product_block
                                .product_photos
                                    .fotorama(data-thumbwidth=68, data-thumbheight=68, data-width='100%', data-maxwidth=660, data-maxheight=660, data-ratio="178/260", data-nav="thumbs")
                                        - if (product.main_img)
                                            .prod_review_img.product_img(data-thumb= checkSlash(product.main_img))
                                                img(src= checkSlash(product.main_img))
                                        - if (product.hover_img)
                                            .prod_review_img.product_img(data-thumb= checkSlash(product.hover_img))
                                                img(src= checkSlash(product.hover_img))
                                        - if (product.img_list && product.img_list.length)
                                            - var arr = product.img_list.split(',')
                                            for img, i in arr
                                                .prod_review_img.product_img(data-thumb= checkSlash(img))
